body
  background: #ccc;



.mouse-container


  $w     = 5rem
  $speed = 2s
  bottom : 20px
  right  : 20px


  $h      = $w * 1.65
  $radius = 999px
  position: absolute
  width   : $w
  height  : $h

  .mouse
    position     : relative
    border-radius: $radius
    background   : #fff
    width        : 98%
    height       : 98%
    margin       : 1% auto
    box-shadow   : 0 0 2px 0px rgba(0,0,0,.25)
    text-align   : center      
    .button
      $w = 10%
      display      : inline-block
      position     : relative
      top          : 15%
      width        : $w
      padding      : 10% 0
      border-radius: $radius
      box-shadow   : inset 0 0 .5em rgba(0,0,0,.5), 0 .25em .25em #ccc
      -webkit-animation: pulse $speed infinite;
      -o-animation     : pulse $speed infinite;
      -moz-animation   : pulse $speed infinite;
      animation        : pulse $speed infinite;


@-webkit-keyframes pulse 
  0%    
    background: #ccc
    box-shadow: 0 0 1em rgba(255,0,0,0)
  50%   
    background: #cc0000
    box-shadow: 0 0 1em rgba(255,0,0,1)
  100%  
    background: #ccc
    box-shadow: 0 0 1em rgba(255,0,0,0)
@-moz-keyframes pulse
  0%    
    background: #ccc 
    box-shadow: 0 0 1em rgba(255,0,0,0)
  50%   
    background: #cc0000 
    box-shadow: 0 0 1em rgba(255,0,0,1)
  100%  
    background: #ccc
    box-shadow: 0 0 1em rgba(255,0,0,0)
@-o-keyframes pulse 
  0%    
    background: #ccc
    box-shadow: 0 0 1em rgba(255,0,0,0)
  50%   
    background: #cc0000
    box-shadow: 0 0 1em rgba(255,0,0,1)
  100%  
    background: #ccc
    box-shadow: 0 0 1em rgba(255,0,0,0)
@keyframes pulse 
  0%    
    background: #ccc
    box-shadow: 0 0 1em rgba(255,0,0,0)
  50%   
    background: #cc0000
    box-shadow: 0 0 1em rgba(255,0,0,1)
  100%  
    background: #ccc
    box-shadow: 0 0 1em rgba(255,0,0,0)
  
